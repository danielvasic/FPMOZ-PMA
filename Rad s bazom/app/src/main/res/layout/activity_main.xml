<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/nazivTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Unesite naslov knjige"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/autorTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Unesite autora knjige"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/ISBNTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Unesite ISBN knjige"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/dodajKnjiguBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dodaj knjigu" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>