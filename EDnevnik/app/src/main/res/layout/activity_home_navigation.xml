<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeNavigationActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/usersBtn"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/ic_baseline_face_24"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/classesBtn"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/ic_baseline_groups_24"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/coursesBtn"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/ic_baseline_library_books_24"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageButton
            android:id="@+id/enrollmentsBtn"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/ic_baseline_how_to_reg_24"
            app:layout_column="2"
            app:layout_row="2" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>